{
  "compilerOptions": {
    "target": "ES2022",           // Set the JavaScript version to compile to
    "module": "ESNext",           // Specify module code generation
    "strict": true,               // Enable all strict type-checking options
    "esModuleInterop": true,      // Enable emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,         // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "outDir": "./build",          // Redirect output structure to the `build` directory
    "rootDir": "./src",           // Specify the root directory of input files
    "moduleResolution": "Node"     // Use Node.js module resolution
  },
  "include": ["src/**/*"],        // Specify the files to include
  "exclude": ["node_modules"]     // Exclude the `node_modules` folder
}